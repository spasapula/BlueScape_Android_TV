<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#e0e0e0"
    android:focusable="false">


    <ImageView
        android:focusable="false"
        android:id="@+id/colorIv"
        android:layout_width="36dp"
        android:layout_height="25dp" />

    <TextView
        android:focusable="false"
        android:paddingBottom="2dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:inputType="textCapCharacters"
        android:id="@+id/userNameTv"
        android:layout_width="36dp"
        android:layout_height="25dp" />

    <ImageView
        android:focusable="false"
        android:src="@drawable/icon_user_wall"
        android:id="@+id/memberIv"
        android:layout_width="36dp"
        android:layout_height="25dp" />

    <TextView
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/followIv"
        android:textColor="#000000"
        android:id="@+id/memberName"
        android:textSize="16sp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/userNameTv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false" />

    <ImageView
        android:layout_marginLeft="8dp"
        android:id="@+id/followIv"
        android:layout_alignParentRight="true"
        android:background="@drawable/follow_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false" />
</RelativeLayout>