<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:style/Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppThemeNoTitle" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BluescapeTheme" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/BluescapeActionBar</item>
    </style>

    <style name="BluescapeThemeDark" parent="android:Theme.Holo">

    </style>

    <style name="BluescapeThemeTranslucent" parent="android:Theme.Translucent">

    </style>


    <style name="BluescapeActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/action_bar</item>
        <item name="android:icon">@drawable/logo_ab</item>
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="android:titleTextStyle">@style/BluescapeTitleTextStyle</item>
    </style>

    <style name="BluescapeTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#49769C</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>


</resources>